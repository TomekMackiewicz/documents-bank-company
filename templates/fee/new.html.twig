{% extends 'layout.html.twig' %}

{% block body %}

<div class="row pb-4">
    <div class="col-sm-6">               
        <ul class="nav">
            <li class="nav-item">
                <a>
                    <h2>New fee</h2>
                </a>
            </li>
        </ul>
    </div>
    <div class="col-sm-6">               
        <ul class="nav float-right">
            <li class="nav-item pl-2">
                <a class="btn btn-light" href="{{ path('fee_index') }}" class="btn btn-default inline">
                    <i class="fas fa-undo"></i> Back
                </a>
            </li>
            <li class="nav-item pl-2">
              <button class="btn btn-light" data-container="body" data-toggle="popover" data-trigger="focus" data-placement="bottom" data-html="true" data-content="
                      Todo
              ">
                  <i class="fas fa-info-circle"></i> Info
              </button>        
            </li>
        </ul>
    </div>
</div>

{{ form_start(form) }}            
    <div class="row pb-4">    
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.delivery) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Transfer (out)</div>
            </div>    
                {{ form_widget(form.delivery) }}
            </div>
        </div>
    </div>
    <div class="row pb-4"> 
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.import) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Transfer (in)</div>
            </div>    
                {{ form_widget(form.import) }}
            </div>
        </div> 
    </div>
    <div class="row pb-4"> 
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.storage) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Storage</div>
            </div>    
                {{ form_widget(form.storage) }}
            </div>
        </div> 
    </div>
    <div class="row pb-4"> 
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.customer) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Customer</div>
            </div>    
                {{ form_widget(form.customer) }}
            </div>
        </div>
    </div>
    <div class="row pb-4"> 
        <div class="col-auto">
            <button type="submit" class="btn btn-light">
                <i class="far fa-edit"></i> Create
            </button>
        </div>            
    </div>
{{ form_end(form) }}

{% endblock %}