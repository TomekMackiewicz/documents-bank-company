{% extends 'layout.html.twig' %}

{% block body %}

<div class="row pb-4">
    <div class="col-sm-12">               
        <ul class="nav float-right">
            <li class="nav-item pl-2">
                <a class="btn btn-outline-secondary" href="{{ path('fee_index') }}" class="btn btn-default inline">
                    <i class="fas fa-undo"></i> {{ 'back'|trans|capitalize }}
                </a>
            </li>
            <li class="nav-item pl-2">
              <button class="btn btn-outline-info" data-container="body" data-toggle="popover" data-trigger="focus" data-placement="bottom" data-html="true" data-content="
                  {{ 'info_fee_new'|trans|capitalize }}
              ">
                  <i class="fas fa-info-circle"></i> {{ 'info'|trans|capitalize }}
              </button>        
            </li>
        </ul>
    </div>
</div>
<div class="row pb-4">
    <div class="col-sm-12">               
        <h2>{{ 'fee_new'|trans|capitalize }}</h2>
    </div>    
</div>
{{ form_start(form) }}
    <div class="row pb-4"> 
        <div class="col-sm-12 col-md-auto pb-2">
            <div class="input-group">
                {{ form_errors(form.import) }}
            <div class="input-group-prepend">
                <div class="input-group-text">{{ 'transfer_in'|trans|capitalize }}</div>
            </div>    
                {{ form_widget(form.import) }}
            </div>
        </div>    
        <div class="col-sm-12 col-md-auto pb-2">
            <div class="input-group">
                {{ form_errors(form.delivery) }}
            <div class="input-group-prepend">
                <div class="input-group-text">{{ 'transfer_out'|trans|capitalize }}</div>
            </div>    
                {{ form_widget(form.delivery) }}
            </div>
        </div> 
        <div class="col-sm-12 col-md-auto pb-2">
            <div class="input-group">
                {{ form_errors(form.storage) }}
            <div class="input-group-prepend">
                <div class="input-group-text">{{ 'storage'|trans|capitalize }}</div>
            </div>    
                {{ form_widget(form.storage) }}
            </div>
        </div> 
        <div class="col-sm-12 col-md-auto pb-2">
            <div class="input-group">
                {{ form_errors(form.boxPrice) }}
            <div class="input-group-prepend">
                <div class="input-group-text">{{ 'box_price'|trans|capitalize }}</div>
            </div>    
                {{ form_widget(form.boxPrice) }}
            </div>
        </div> 
        <div class="col-sm-12 col-md-auto pb-2">
            <div class="input-group">
                {{ form_errors(form.customer) }}
            <div class="input-group-prepend">
                <div class="input-group-text">{{ 'customer'|trans|capitalize }}</div>
            </div>    
                {{ form_widget(form.customer) }}
            </div>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary">
                <i class="far fa-edit"></i> {{ 'create'|trans|capitalize }}
            </button>
        </div>            
    </div>
{{ form_end(form) }}

{% endblock %}