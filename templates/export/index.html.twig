{% extends "layout.html.twig" %}

{% block body %}
<div class="row pb-4">
    <div class="col-sm-12">               
        <ul class="nav">
            <li class="nav-item">
                <a><h2>{{ 'export'|trans|capitalize }}</h2></a>
            </li>
        </ul>
    </div>
</div>   
{{ form_start(form) }}  
    <div class="row pb-4">   
        <div class="col-md-8 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.filename) }}
            <div class="input-group-prepend">
                <div class="input-group-text">{{ 'filename'|trans|capitalize }}</div>
            </div>    
                {{ form_widget(form.filename) }}
            </div>
        </div>      
        <div class="col-md-8 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.customer) }}
            <div class="input-group-prepend">
                <div class="input-group-text">{{ 'customer'|trans|capitalize }}</div>
            </div>    
                {{ form_widget(form.customer, {'attr': {'multiple':'multiple', 'class': 'multiple-male'}}) }}
            </div>
        </div> 
    </div>
    <div class="row pb-4">            
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary">
                <i class="far fa-edit"></i> {{ 'export'|trans|capitalize }}
            </button>
        </div>            
    </div>
{{ form_end(form) }}  

{% endblock %}
