{% extends "layout.html.twig" %}

{% block body %}
    
<div class="row pb-4">
    <div class="col-sm-6">               
        <ul class="nav">
            <li class="nav-item">
                <a><h2>Files</h2></a>
            </li>
        </ul>
    </div>
    <div class="col-sm-6">               
        <ul class="nav float-right">
          <li class="nav-item pl-2">
            <a class="btn btn-light" href="{{ path('file_new') }}">
                <i class="fas fa-plus"></i> New file
            </a>
          </li>
          <li class="nav-item pl-2">
            <button class="btn btn-light">
                <i class="fas fa-print"></i> Print
            </button>        
          </li>
          <li class="nav-item pl-2">
            <button class="btn btn-light" data-container="body" data-toggle="popover" data-trigger="focus" data-placement="bottom" data-html="true" data-content="
                    Combined search by file signature, status and / or customer.<br>
                    You can search by part of the signature (ex. A1 will mach file A101 as well as file A123).<br>
                    You can also get combined results for multiple statuses or customers.<br>
                    Search results are limited to 100 records.
            ">
                <i class="fas fa-info-circle"></i> Info
            </button>        
          </li>          
        </ul>
    </div>
</div>
                    
{{ form_start(searchForm) }}
    <div class="row pb-4">            
        <div class="col-auto">                    
            <div class="input-group">
                {{ form_errors(searchForm.signature) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Signature</div>
            </div>    
                {{ form_widget(searchForm.signature) }}
            </div>
        </div>
        <div class="col-auto">
            <div class="input-group">
                {{ form_errors(searchForm.status) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Status</div>
            </div>    
                {{ form_widget(searchForm.status, {'attr': {'multiple':'multiple', 'class': 'multiple' }}) }}
            </div>
        </div>
        <div class="col-auto">
            <div class="input-group">
                {{ form_errors(searchForm.customer) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Customer</div>
            </div>    
                {{ form_widget(searchForm.customer, {'attr': {'multiple':'multiple', 'class': 'multiple' }}) }}
            </div>                     
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-light">
                <i class="fab fa-searchengin"></i> Search
            </button>
        </div>
    </div>
{{ form_end(searchForm) }}         
   
<div class="row pb-4">   
    <div class="col-sm-12">
        {% if searchResults is not empty %}
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Signature</th>
                        <th scope="col">Status</th>
                        <th scope="col">Customer</th>
                        <th scope="col">Note</th>
                    </tr>
                </thead>
                <tbody>
                    {% for file in searchResults %}
                        <tr>
                            <td>
                                <a href="{{ path('file_show', { 'id': file.id }) }}">
                                    {{ file.signature }}
                                </a>
                            </td>
                            <td>
                                {% if file.status == 1 %}
                                    In
                                {% elseif file.status == 2 %}
                                    Out
                                {% else %}
                                    Unknown
                                {% endif %}
                            </td>
                            <td>{{ file.customer.company }}</td>
                            <td>{{ file.note }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% elseif app.request.method is same as('POST') %}
            <div class="alert alert-light" role="alert">
                No results
            </div>
        {% endif %}        
    </div>
</div>
        
{% endblock %}
