{% extends 'layout.html.twig' %}

{% block body %}

<div class="row pb-4">
    <div class="col-sm-12">               
        <ul class="nav float-right">
            <li class="nav-item pl-2">
                <a class="btn btn-outline-secondary" href="{{ path('customer_index') }}" class="btn btn-default inline">
                    <i class="fas fa-undo"></i> {{ 'back'|trans|capitalize }}
                </a>
            </li>
            <li class="nav-item pl-2">
                {{ form_start(delete_form, {'attr': {'class': 'inline'}}) }}
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="far fa-trash-alt"></i> {{ 'delete'|trans|capitalize }}
                    </button>
                {{ form_end(delete_form) }}
            </li> 
        </ul>
    </div>
</div>    
<div class="row pb-4">
    <div class="col-sm-12">               
        <h2>{{ 'customer_edit'|trans|capitalize }}: {{ customer.name }}</h2>
    </div>    
</div>    
{{ form_start(edit_form) }}            
    <div class="row pb-4">    
        <div class="col-sm-12 col-md-auto pb-2">
            <div class="input-group">
                {{ form_errors(edit_form.name) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">{{ 'customer_name'|trans|capitalize }}</div>
                </div>    
                {{ form_widget(edit_form.name) }}
            </div>
        </div>
        <div class="col-sm-12 col-md-auto pb-2">
            <div class="input-group">
                {{ form_errors(edit_form.address) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">{{ 'customer_address'|trans|capitalize }}</div>
                </div>    
                {{ form_widget(edit_form.address) }}
            </div>
        </div> 
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary">
                <i class="far fa-edit"></i> {{ 'edit'|trans|capitalize }}
            </button>
        </div>            
    </div>
{{ form_end(edit_form) }}

{% endblock %}
