{% extends 'layout.html.twig' %}

{% block body %}

<div class="row pb-4">
    <div class="col-sm-6">               
        <ul class="nav">
            <li class="nav-item">
                <a>
                    <h2>Edit customer: {{ user.username }} ({{ user.company }})</h2>
                </a>
            </li>
        </ul>
    </div>
    <div class="col-sm-6">               
        <ul class="nav float-right">
            <li class="nav-item pl-2">
                <a class="btn btn-light" href="{{ path('customer_index') }}" class="btn btn-default inline">
                    <i class="fas fa-undo"></i> Back
                </a>
            </li>
            <li class="nav-item pl-2">
                {{ form_start(delete_form, {'attr': {'class': 'inline'}}) }}
                    <button type="submit" class="btn btn-danger">
                        <i class="far fa-trash-alt"></i> Delete
                    </button>
                {{ form_end(delete_form) }}
            </li> 
        </ul>
    </div>
</div>    
    
{{ form_start(edit_form) }}            
    <div class="row pb-4">    
        <div class="col-sm-4">
            <div class="input-group">
                {{ form_errors(edit_form.company) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">Company</div>
                </div>    
                {{ form_widget(edit_form.company) }}
            </div>
        </div>
    </div>
    <div class="row pb-4"> 
        <div class="col-sm-4">
            <div class="input-group">
                {{ form_errors(edit_form.username) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">Username</div>
                </div>    
                {{ form_widget(edit_form.username) }}
            </div>
        </div> 
    </div>
    <div class="row pb-4"> 
        <div class="col-sm-4">
            <div class="input-group">
                {{ form_errors(edit_form.address) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">Address</div>
                </div>    
                {{ form_widget(edit_form.address) }}
            </div>
        </div>
    </div>
    <div class="row pb-4"> 
        <div class="col-sm-4">
            <div class="input-group">
                {{ form_errors(edit_form.email) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">Email</div>
                </div>    
                {{ form_widget(edit_form.email) }}
            </div>
        </div>
    </div>            
    <div class="row pb-4"> 
        <div class="col-sm-4">
            <div class="input-group">
                {{ form_errors(edit_form.password.first) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">Password</div>
                </div>    
                {{ form_widget(edit_form.password.first) }}
            </div>
        </div>
    </div>            
    <div class="row pb-4"> 
        <div class="col-sm-4">
            <div class="input-group">
                {{ form_errors(edit_form.password.second) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">Repeat password</div>
                </div>    
                {{ form_widget(edit_form.password.second) }}
            </div>
        </div>
    </div>             
    <div class="row pb-4"> 
        <div class="col-auto">
            <button type="submit" class="btn btn-light">
                <i class="far fa-edit"></i> Edit
            </button>
        </div>            
    </div>
{{ form_end(edit_form) }}

{% endblock %}
