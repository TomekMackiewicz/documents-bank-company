{% extends 'layout.html.twig' %}

{% block body %}
    
<div class="row pb-4">
    <div class="col-sm-6">               
        <ul class="nav">
            <li class="nav-item">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td>Customer:</td>
                            <th>{{ customer.name }}</th>                         
                        </tr>
                    </tbody>
                </table> 
            </li>
        </ul>
    </div>
    <div class="col-sm-6">               
        <ul class="nav float-right">
            <li class="nav-item pl-2">
                <a class="btn btn-light" href="{{ path('customer_edit', { 'id': customer.id }) }}" class="btn btn-default inline">
                    <i class="far fa-edit"></i> Edit
                </a>
            </li>  
            <li class="nav-item pl-2">
              <button class="btn btn-light" id="print">
                  <i class="fas fa-print"></i> PDF
              </button>        
            </li>
            <li class="nav-item pl-2">
                <a class="btn btn-light" href="{{ path('customer_index') }}" class="btn btn-default inline">
                    <i class="fas fa-undo"></i> Back
                </a>
            </li>
            <li class="nav-item pl-2">
              <button class="btn btn-light" data-container="body" data-toggle="popover" data-trigger="focus" data-placement="bottom" data-html="true" data-content="
                      Todo.
              ">
                  <i class="fas fa-info-circle"></i> Info
              </button>        
            </li>             
            <li class="nav-item pl-2">
                {{ form_start(delete_form, {'attr': {'class': 'inline'}}) }}
                    <button type="submit" class="btn btn-danger">
                        <i class="far fa-trash-alt"></i> Delete
                    </button>
                {{ form_end(delete_form) }}
            </li> 
        </ul>
    </div>
</div>     
<div class="row pb-4">
    <div class="col-sm-12">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>Address: {{ customer.address }}</td>
                    <td>Number of files: <strong>{{ customer.files|length }}</strong></td>
                    <td>Files in: <strong>{{ files.0.in }}</strong></td>
                    <td>Files out: <strong>{{ files.0.out }}</strong></td>
                    <td>Files missing: <strong>{{ files.0.unknown }}</strong></td>
                    <td>Files disposed: <strong>{{ files.0.disposed }}</strong></td>                
                </tr>
            </tbody>
        </table>        
    </div>
</div>   
<div class="row pb-4">
    <div class="col-sm-12">
        <h4>Transfers</h4>
    </div>
</div>                         
{{ form_start(transfersForm) }}
    <div class="row pb-4">            
        <div class="col-auto">                    
            <div class="input-group">
                {{ form_errors(transfersForm.dateFrom) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Date from</div>
            </div>    
                {{ form_widget(transfersForm.dateFrom, { 'attr' : { 'class': 'datepicker' }}) }}
            </div>
        </div>
        <div class="col-auto">
            <div class="input-group">
                {{ form_errors(transfersForm.dateTo) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Date to</div>
            </div>    
                {{ form_widget(transfersForm.dateTo, { 'attr' : { 'class': 'datepicker' }}) }}
            </div>
        </div>
        <div class="col-auto">
            <div class="input-group">
                {{ form_errors(transfersForm.type) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Type</div>
            </div>    
                {{ form_widget(transfersForm.type, {'attr': { 'multiple':'multiple', 'class': 'multiple' }}) }}
            </div>                    
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-light">
                <i class="fab fa-searchengin"></i> Search
            </button>
        </div>
    </div>
{{ form_end(transfersForm) }} 

<div class="row pb-4">
    <div class="col-sm-12 printable">
        {% if transfersFromTo is not empty %}
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Type</th>
                        <th scope="col">Customer</th>
                        <th scope="col">Show</th>
                    </tr>
                </thead>
                <tbody>
                    {% for transfer in transfersFromTo %}
                        <tr>
                            <td>{{ transfer.date|date('d-m-Y') }}</td>
                            <td>
                                {% if transfer.type == 1 %}
                                    In
                                {% elseif transfer.type == 2 %}
                                    Out
                                {% else %}
                                    Adjustment
                                {% endif %}
                            </td>
                            <td>{{ transfer.customer.name }}</td>
                            <td>
                                <a href="{{ path('transfer_show', { 'id': transfer.id }) }}">
                                    Show
                                </a>
                            </td>                            
                        </tr>
                    {% endfor %}
                </tbody>
            </table>               
        {% elseif app.request.method is same as('POST') %}
            <div class="alert alert-light" role="alert">
                No results
            </div>
        {% endif %}          
    </div>        
</div>

{% if transfersFromTo is not empty %}
    <div id="metadata" hidden>
        <p>{{ customer.name }} transfers</p>
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <td>From:</td>
                    <th>{{ transfersForm.vars.value.dateFrom|date('d-m-Y') }}</th>
                    <td>To:</td>
                    <th>{{ transfersForm.vars.value.dateTo|date('d-m-Y') }}</th>
                    <td>Type:</td>
                    <th>
                        {% if transfersForm.vars.value.type is not empty %}
                            {% for type in transfersForm.vars.value.type %}
                                {% if type == 1 %}
                                    In                       
                                {% elseif type == 2 %}
                                    Out
                                {% else %}
                                    Adjustment
                                {% endif %}
                                {% if not loop.last %},{% endif %}
                            {% endfor %}
                        {% else %}
                            All
                        {% endif %}                        
                    </th>
                </tr>
            </tbody>
        </table>
    </div>
{% endif %}
        
{% endblock %}
