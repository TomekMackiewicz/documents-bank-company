{% extends "layout.html.twig" %}

{% block body %}
    <div class="col-sm-12">
        <h1>Customers</h1>
        <a class="nav-link" href="{{ path('customer_new') }}">New</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Company name</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
                <tr>
                    <td><a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.name }}</a></td>
                    <td>{{ customer.address }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('customer_show', { 'id': customer.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('customer_edit', { 'id': customer.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table> 
    </div>
    
{% endblock %}
