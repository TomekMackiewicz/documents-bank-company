{% extends "layout.html.twig" %}

{% block body %}

<div class="row pb-4">
    <div class="col-sm-6">               
        <ul class="nav">
            <li class="nav-item">
                <a><h2>Customers</h2></a>
            </li>
        </ul>
    </div>
    <div class="col-sm-6">               
        <ul class="nav float-right">
          <li class="nav-item pl-2">
            <a class="btn btn-light" href="{{ path('customer_new') }}">
                <i class="fas fa-plus"></i> New customer
            </a>
          </li>        
        </ul>
    </div>
</div>
<div class="row pb-4">   
    <div class="col-sm-12">
        {% if customers is not empty %}
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Company name</th>
                        <th scope="col">Address</th>
                    </tr>
                </thead>
                <tbody>
                    {% for customer in customers %}
                        <tr>
                            <td>
                                <a href="{{ path('customer_show', { 'id': customer.id }) }}">
                                    {{ customer.company }}
                                </a>
                            </td>
                            <td>{{ customer.address }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}         
    </div>
</div>
    
{% endblock %}
