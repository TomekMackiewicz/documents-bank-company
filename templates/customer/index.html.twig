{% extends "layout.html.twig" %}

{% block body %}

<div class="row pb-4">
    <div class="col-sm-12">               
        <ul class="nav float-right">
          <li class="nav-item pl-2">
            <a class="btn btn-outline-success" href="{{ path('customer_new') }}">
                <i class="fas fa-plus"></i> {{ 'customer_new'|trans|capitalize }}
            </a>
          </li>        
        </ul>
    </div>
</div>
<div class="row pb-4">
    <div class="col-sm-12">               
        <h2>{{ 'customers'|trans|capitalize }}</h2>
    </div>
</div>
<div class="row pb-4">   
    <div class="col-sm-12">
        {% if customers is not empty %}
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">{{ 'customer_name'|trans|capitalize }}</th>
                        <th scope="col">{{ 'customer_address'|trans|capitalize }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for customer in customers %}
                        <tr>
                            <td>
                                <a href="{{ path('customer_show', { 'id': customer.id }) }}">
                                    {{ customer.name }}
                                </a>
                            </td>
                            <td>{{ customer.address }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}         
    </div>
</div>
    
{% endblock %}
