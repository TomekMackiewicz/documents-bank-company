{% extends 'layout.html.twig' %}

{% block body %}
    
<div class="row pb-4">
    <div class="col-sm-12">               
        <ul class="nav float-right">
            <li class="nav-item pl-2">
                <a class="btn btn-outline-secondary" href="{{ path('user_index') }}" class="btn btn-default inline">
                    <i class="fas fa-undo"></i> {{ 'back'|trans|capitalize }}
                </a>
            </li>
        </ul>
    </div>
</div>  
<div class="row pb-4">
    <div class="col-sm-12">               
        <h2>{{ 'user_new'|trans|capitalize }}</h2>
    </div>    
</div>
{{ form_start(form) }}            
    <div class="row pb-4"> 
        <div class="col-md-8 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.username) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">{{ 'user_name'|trans|capitalize }}</div>
                </div>    
                {{ form_widget(form.username) }}
            </div>
        </div> 
    </div>
    <div class="row pb-4"> 
        <div class="col-md-8 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.email) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">{{ 'email'|trans|capitalize }}</div>
                </div>    
                {{ form_widget(form.email) }}
            </div>
        </div>
    </div>  
    <div class="row pb-4">    
        <div class="col-md-8 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.customer) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">{{ 'customer'|trans|capitalize }}</div>
                </div>    
                {{ form_widget(form.customer) }}
            </div>
        </div>
    </div>
    <div class="row pb-4">    
        <div class="col-md-8 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.roles) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">{{ 'user_role'|trans|capitalize }}</div>
                </div>    
                {{ form_widget(form.roles) }}
            </div>
        </div>
    </div>            
    <div class="row pb-4"> 
        <div class="col-md-8 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.password.first) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">{{ 'password'|trans|capitalize }}</div>
                </div>    
                {{ form_widget(form.password.first) }}
            </div>
        </div>
    </div>            
    <div class="row pb-4"> 
        <div class="col-md-8 col-lg-4">
            <div class="input-group">
                {{ form_errors(form.password.second) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">{{ 'password_repeat'|trans|capitalize }}</div>
                </div>    
                {{ form_widget(form.password.second) }}
            </div>
        </div>
    </div>             
    <div class="row pb-4"> 
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-primary">
                <i class="far fa-edit"></i> {{ 'create'|trans|capitalize }}
            </button>
        </div>            
    </div>
{{ form_end(form) }}

{% endblock %}
