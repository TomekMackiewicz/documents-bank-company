{% extends 'layout.html.twig' %}

{% block body %}

<div class="row pb-4">
    <div class="col-sm-6">               
        <ul class="nav">
            <li class="nav-item">
                <a><h2>Transfers</h2></a>
            </li>
        </ul>
    </div>
    <div class="col-sm-6">               
        <ul class="nav float-right">
          <li class="nav-item pl-2">
            <button class="btn btn-light" id="print">
                <i class="fas fa-print"></i> PDF
            </button>        
          </li>
          <li class="nav-item pl-2">
            <button class="btn btn-light" data-container="body" data-toggle="popover" data-trigger="focus" data-placement="bottom" data-html="true" data-content="
                    Combined search of inventory transfers for given dates.<br>
                    You can also get combined results for multiple types (in, out...) and/or customers.<br>
                    Search results are limited to 100 records.
            ">
                <i class="fas fa-info-circle"></i> Info
            </button>        
          </li>          
        </ul>
    </div>
</div>    
    
{{ form_start(transfersSearchForm) }}
    <div class="row pb-4">            
        <div class="col-auto">                    
            <div class="input-group">
                {{ form_errors(transfersSearchForm.dateFrom) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Date from</div>
            </div>    
                {{ form_widget(transfersSearchForm.dateFrom, { 'attr' : { 'class': 'datepicker' }}) }}
            </div>
        </div>
        <div class="col-auto">
            <div class="input-group">
                {{ form_errors(transfersSearchForm.dateTo) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Date to</div>
            </div>    
                {{ form_widget(transfersSearchForm.dateTo, { 'attr' : { 'class': 'datepicker' }}) }}
            </div>
        </div>
        <div class="col-auto">
            <div class="input-group">
                {{ form_errors(transfersSearchForm.type) }}
            <div class="input-group-prepend">
                <div class="input-group-text">Type</div>
            </div>    
                {{ form_widget(transfersSearchForm.type, {'attr': {'multiple':'multiple', 'class': 'multiple'}}) }}
            </div>                    
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-light">
                <i class="fab fa-searchengin"></i> Search
            </button>
        </div>
    </div>
{{ form_end(transfersSearchForm) }}

<div class="row pb-4">  
    <div class="col-sm-12 printable">
        {% if transfersSearchResults is not empty %}
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Type</th>
                        <th scope="col">Show</th>
                    </tr>
                </thead>
                <tbody>
                    {% for transfer in transfersSearchResults %}
                        <tr>
                            <td>{{ transfer.date|date('d-m-Y') }}</td>
                            <td>
                                {% if transfer.type == 1 %}
                                    In
                                {% elseif transfer.type == 2 %}
                                    Out
                                {% else %}
                                    Adjustment
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('user_transfer', { 'id': transfer.id }) }}">
                                    Show
                                </a>
                            </td>                            
                        </tr>
                    {% endfor %}
                </tbody>
            </table>               
        {% elseif app.request.method is same as('POST') %}
            <div class="alert alert-light" role="alert">
                No results
            </div>
        {% endif %}         
    </div>
</div>

{% if transfersSearchResults is not empty %}
    <div id="metadata" hidden>
        <h4>Transfers</h4>
        <table class="table table-borderless">
            <tbody>
                <tr>                   
                    <td>Type:</td>
                    <th>
                        {% if transfersSearchForm.vars.value.type is not empty %}
                            {% for type in transfersSearchForm.vars.value.type %}
                                {% if type == 1 %}
                                    In                       
                                {% elseif type == 2 %}
                                    Out
                                {% else %}
                                    Adjustment
                                {% endif %}
                                {% if not loop.last %},{% endif %}
                            {% endfor %}
                        {% else %}
                            All
                        {% endif %}                        
                    </th>
                </tr>
            </tbody>
        </table>
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <td>From:</td>
                    <th>{{ transfersSearchForm.vars.value.dateFrom|date('d-m-Y') }}</th>
                    <td>To:</td>
                    <th>{{ transfersSearchForm.vars.value.dateTo|date('d-m-Y') }}</th>
                </tr>
            </tbody>
        </table>
    </div>
{% endif %}        
        
{% endblock %}